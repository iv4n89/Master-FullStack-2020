<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.cloudftic.fxapp1.SecondaryController">
	<children>
		<BorderPane prefHeight="200.0" prefWidth="200.0">
			<bottom>
				<FlowPane minHeight="-Infinity" prefHeight="30.0" prefWidth="200.0" BorderPane.alignment="CENTER">
					<children>
						<Button onAction="#hacerAlgo" text="Hacer algo" />
						<Button onAction="#switchToPrimary" text="Regresar" />
					</children>
					<BorderPane.margin>
						<Insets bottom="2.0" left="2.0" right="2.0" top="2.0" />
					</BorderPane.margin>
				</FlowPane>
			</bottom>
			<center>
            <VBox BorderPane.alignment="TOP_CENTER">
               <children>
						<Label text="Un texto" />
						<TextField fx:id="text1" />
                  <Label fx:id="resultado1" />
                  <TextField fx:id="text2" />
               </children>
            </VBox>
			</center>
		</BorderPane>
	</children>
	<padding>
		<Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
	</padding>
</VBox>
